{
  "manifest_version": 3,
  "name": "Custom Input Box",
  "description": "A floating popup which is used to enter text in a text box on the web page",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions":[
    "activeTab","scripting", "storage","tabs"
  ],
  "background": {
    
      "service_worker":"background_script.js"
    
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "content_script.css"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Custom Input Box"
  }
  
}